{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}

{# formation #}
{% if formations|default %}

<div class="card-container">
    {% for formation in formations %}
    <div class="card">
        <div class="card-image" style="background-image: url('{{ asset('img/' ~ formation.name ~ '.jpg') }}')"></div>
        <div class="card-content">
            <h1>{{ formation.name }}</h1>
        </div>
    </div>
    {% endfor %}
</div>

{% endif %}
{% endblock %}