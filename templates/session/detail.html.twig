{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<div class="uk-container">

    {# session #}
    {% if slug == 'detail' %}

    <h1>Détails de la sessions</h1>

    {% if session|default %}

    <table class="uk-table uk-table-responsive uk-table-hover uk-table-divider uk-table-small">
        <thead>
            <tr>
                <th>Session id:</th>
                <th>Formation id:</th>
                <th>Places:</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Inscrits</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ session.id }}</td>
                <td>{{ session.formation.id }}</td>
                <td>{{ session.maxstudents }}</td>
                <td>{{ session.datestart | date("j-m-Y") }}</td>
                <td>{{ session.dateend | date("j-m-Y") }}</td>
                <td>{{ session.reservations }}</td>
            </tr>
        </tbody>
    </table>
    {% endif %}


    {# list of student #}
    {% if session.students|default %}
    <ul>
        {% for program in session.programs %}
            <li>Module: {{program.course.namecourse }} durée: {{program.days}} jours</li> 
        {% endfor %}
    </ul>
    {% endif %}


    {# SEPARATOR #}
    <div class="separator"></div>

    {% if session.students|default %}
    <h3>Liste des stagiaires inscrits à cette session <span>{{ session.students | length  }}</span></h3>
    <table class="uk-table uk-table-responsive uk-table-hover uk-table-divider uk-table-small">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Téléphone</th>
                <th>Date de naissance</th>
                <th>Code postal</th>
            </tr>
        </thead>
        <tbody>
            {% for student in session.students %}
            <tr>
                <td>{{ student.id }}</td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.firstName }}</a></td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.lastName }}</a></td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.address }}</a></td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.city }}</a></td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.phoneNumber }}</a></td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.birthday | date('d-m-Y')}}</a></td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.zipCode }}</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {# {% endif %} #}




    {% if notRegister|default %}
    {# SEPARATOR #}
    <div class="separator"></div>

    <h3>Liste des stagiaires non inscrits à cette session <span>{{ notRegister | length  }}</span></h3>

    <table class="uk-table uk-table-responsive uk-table-hover uk-table-divider uk-table-small">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Téléphone</th>
                <th>Date de naissance</th>
                <th>Code postal</th>
            </tr>
        </thead>
        <tbody>
            {% for student in notRegister %}
            <tr>
                <td>{{ student.id }}</td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.firstName }}</a></td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.lastName }}</a></td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.address }}</a></td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.city }}</a></td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.phoneNumber }}</a></td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.birthday | date('d-m-Y')}}</a></td>
                <td><a href="{{ path('detail_session', {'id': student.id }) }}">{{ student.zipCode }}</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    
    {% else %}
    <h2>Tous les stagiaires sont inscrit</h2>
    {% endif %}

    {% endif %}
</div>
{% endblock %}