{% extends 'base.html.twig' %}

{% block title %}Sessions{% endblock %}

{% block body %}

<div class="uk-container">

    
    {% if slug|default == 'add' %}

        {% if session_id|default %}
        <h2>Modifier une session</h2>
        {% else %}
        <h2>Ajouter une session</h2>
        {% endif %}

        {% if formAddSession|default %}

        <div class="uk-hr"></div>
        {{ form_start(formAddSession, {'attr': {'class': 'uk-form uk-margin-top uk-grid-small', 'uk-grid' : '' }}) }}
        {{ form_end(formAddSession) }}
        {% else %}
        <h3>En attente</h3>
        {% endif %}

    {% elseif sessions|default %}

    <div class="uk-animation-slide-bottom">
        <p class="uk-text-center">
        <h1>Liste des sessions</h1>
        </p>
    </div>

    <div class="separator"></div>

    <div class="tabs-active uk-animation-fade">

        <table id="table-list" class="ui compact celled table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Formation id:</th>
                    <th>Places:</th>
                    <th>Date début</th>
                    <th>Date fin</th>
                    <th>Inscrits</th>
                    <th>Editer</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>

                {% for session in sessions %}

                <tr class="hover" onclick="window.location='{{ path('detail_session', {'id': session.id }) }}';"
                    style="cursor:pointer;">
                    <td>{{ session.id }}</td>
                    <td>{{ session.formation.id }}</td>
                    <td>{{ session.maxstudents }}</td>
                    <td>{{ session.datestart | date("j-m-Y") }}</td>
                    <td>{{ session.dateend | date("j-m-Y") }}</td>
                    <td>{{ session.reservations }}</td>
                    <td>
                        <a href="#" uk-tooltip="title: Éditer; pos: top-left"
                            onclick="editSession(event, '{{ path('edit_session', {'id': session.id }) }}'); event.stopPropagation();" class="ui-button ui-widget ui-corner-all">
                            <i class="edit icon"></i>
                        </a>
                    </td>
                    <td>
                        <a href="#" uk-tooltip="title: Supprimer; pos: top-left" class="ui-button ui-widget ui-corner-all">
                            <i class="trash icon"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
            <tfoot class="full-width">
                <tr>
                    <th></th>
                    <th colspan="8">
                        <div class="uk-text-right uk-padding-top">
                            <a href="{{ path('new_session') }}" class="ui-button ui-widget ui-corner-all">
                                <i class="user icon"></i> Ajouter Session
                            </a>
                        </div>
                        {# <div class="ui-button ui-widget ui-corner-all">
                            <i class="user icon"></i> Ajouter Session
                        </div> #}
                    </th>
                </tr>
            </tfoot>
        </table>
        <div class="ui small pagination menu">
            <a class="icon item prevPage"><i class="left chevron icon"></i></a>
            <div id="pagination" class="ui small pagination menu"></div>
            <a class="icon item nextPage"><i class="right chevron icon"></i></a>
        </div>
    </div>

    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}

</div>
{% endblock %}