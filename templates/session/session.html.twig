{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}

<div class="uk-container">

    {# session #}
    {% if slug == 'session' %}

    <h1>Liste des sessions</h1>

    {% if sessions|default %}

    <table class="uk-table uk-table-responsive uk-table-hover uk-table-divider uk-table-small">
        <thead>
            <tr>
                <th>id</th>
                <th>Formation id:</th>
                <th>Places:</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Inscrits</th>
            </tr>
        </thead>
        <tbody>
            {% for session in sessions %}
            <tr>
            <tr onclick="window.location='{{ path('detail_session', {'id': session.id }) }}';" style="cursor:pointer;">
                <td>{{ session.id }}</a></td>
                <td>{{ session.formation.id }}</a></td>
                <td>{{ session.maxstudents }}</a></td>
                <td>{{ session.datestart | date("j-m-Y") }}</td>
                <td>{{ session.dateend | date("j-m-Y")}}</td>
                <td>{{ session.reservations }}</td>
                </a>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <p uk-margin>
        <a class="uk-button uk-button-primary uk-button-small">Ajouter une session</a>
        <a class="uk-button uk-button-secondary uk-button-small">Supprimer une session</a>
    </p>
    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}
</div>
{% endblock %}