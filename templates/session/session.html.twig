{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<div class="uk-container">

    {# session #}
    {% if slug == 'session' %}

    <h1>Liste des sessions</h1>

    {% if sessions|default %}

    <table class="uk-table uk-table-responsive uk-table-hover uk-table-divider uk-table-small">
        <thead>
            <tr>
                <th>id</th>
                <th>Formation id:</th>
                <th>Places:</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Inscrits</th>
            </tr>
        </thead>
        <tbody>


            {% for session in sessions %}
            <tr>
                <td><a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.id }}</a></td>
                <td><a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.formation.id }}</a></td>
                <td><a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.maxstudents }}</a></td>
                <td><a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.datestart | date("j-m-Y")
                        }}</a></td>
                <td><a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.dateend | date("j-m-Y")
                        }}</a></td>
                <td><a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.reservations }}</a></td>
                </a>
            </tr>

            {% endfor %}

        </tbody>
    </table>

    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}

    {% if slug == 'formation' %}


    {# formation #}
    {% if formations|default %}

    <h1>Liste des formations</h1>

    <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-small uk-grid-match" uk-grid>
        {% for formation in formations %}
        <div>
            <a href="">
                <div class="uk-card uk-card-default">
                    <div class="uk-card-media-top" style=""></div>
                    <div class="uk-card-body">
                        <h3 class="uk-card-title">{{ formation.name }}</h3>
                        <p>Autre infos session</p>
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>

    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}
</div>
{% endblock %}