{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<div class="uk-container">
    
    {# session #}
    {% if slug == 'session' %}

    <h1>Liste des sessions</h1>
    
    {% if sessions|default %}

    <table class="uk-table uk-table-responsive uk-table-hover uk-table-divider uk-table-small">
        <thead>
            <tr>
                <th>Session id:</th>
                <th>Formation id:</th>
                <th>Places:</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Inscrits</th>
            </tr>
        </thead>
        <tbody>
            {% for session in sessions %}
            <tr>
                <td>{{ session.id }}</td>
                <td>{{ session.formation.id }}</td>
                <td>{{ session.maxstudents }}</td>
                <td>{{ session.datestart | date("j-m-Y") }}</td>
                <td>{{ session.dateend | date("j-m-Y") }}</td>
                <td>{{ session.reservations }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}

    {% if slug == 'formation' %}

    <h1>Liste des formations</h1>
    {# formation #}
    {% if formations|default %}

    <table class="uk-table uk-table-hover uk-table-divider uk-table-small">
        <thead>
            <tr>
                <th>Formation id:</th>
                <th>Intitulé:</th>

            </tr>
        </thead>
        <tbody>
            {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.name }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}
</div>
{% endblock %}