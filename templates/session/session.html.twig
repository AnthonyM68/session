{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}

<div class="uk-container">

    {# session #}
    <div class="uk-animation-slide-bottom">
        <p class="uk-text-center">
            <h1>Liste des sessions</h1>
        </p>
    </div>

    <div class="separator"></div>

    {% if sessions|default %}

    <table class="uk-table uk-table-responsive uk-table-hover uk-table-divider uk-table-small uk-table-justify uk-animation-fade">
        <thead>
            <tr>
                <th>id</th>
                <th>Formation id:</th>
                <th>Places:</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Inscrits</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for session in sessions %}
            <tr onclick="window.location='{{ path('detail_session', {'id': session.id }) }}';" style="cursor:pointer;">
                <td>{{ session.id }}</td>
                <td>{{ session.formation.id }}</td>
                <td>{{ session.maxstudents }}</td>
                <td>{{ session.datestart | date("j-m-Y") }}</td>
                <td>{{ session.dateend | date("j-m-Y") }}</td>
                <td>{{ session.reservations }}</td>
                <td><a href="#" class="token-link uk-icon-button uk-margin-small-right" uk-icon="icon: pencil" uk-tooltip="title: Éditer; pos: top-left"
                    onclick="editSession(event, '{{ path('edit_session', {'id': session.id }) }}'); event.stopPropagation();"></a>
            </td>
                <td><a href="#" class="token-link uk-icon-button uk-margin-small-right uk-text-danger"
                        uk-icon="icon: trash" uk-tooltip="title: Supprimer; pos: top-left"></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <p class="uk-width-1-1 uk-text-right uk-animation-fade" uk-margin>
        <a class="uk-button uk-button-primary uk-button-small">Ajouter une session</a>
    </p>
    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    
    {% if edit|default %}
    <h1>Editer / Ajouter une nouvelle session</h1>

    <h3>En attente</h3>

    {% endif %}

   
</div>
{% endblock %}