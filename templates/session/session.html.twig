{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<div class="uk-container">

    {# session #}
    {% if slug == 'session' %}

    <h1>Liste des sessions</h1>

    {% if sessions|default %}

    <table class="uk-table uk-table-responsive uk-table-hover uk-table-divider uk-table-small">
        <thead>
            <tr>
                <th>id</th>
                <th>Formation id:</th>
                <th>Places:</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Inscrits</th>
            </tr>
        </thead>
        <tbody>

           
            {% for session in sessions %} 
            <tr>  
                <td><a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.id }}</a></td>
                <td><a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.formation.id }}</a></td>
                <td><a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.maxstudents }}</a></td>
                <td><a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.datestart | date("j-m-Y") }}</a></td>
                <td><a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.dateend | date("j-m-Y") }}</a></td>
                <td><a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.reservations }}</a></td>
            </a>
            </tr>
        
            {% endfor %}
            
        </tbody>
    </table>

    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}

    {% if slug == 'formation' %}

    <h1>Liste des formations</h1>
    {# formation #}
    {% if formations|default %}

    <table class="uk-table uk-table-hover uk-table-divider uk-table-small">
        <thead>
            <tr>
                <th>Formation id:</th>
                <th>Intitulé:</th>

            </tr>
        </thead>
        <tbody>
            {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.name }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}
</div>
{% endblock %}