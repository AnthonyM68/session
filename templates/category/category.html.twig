{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}

<div class="uk-container">

    {# list cateories #}
    {% if slug == 'list' %}

    <h1>Liste des catégories</h1>

    {% if categories|default %}

    <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-small uk-grid-match" uk-grid>
        {% for categorie in categories %}
        <a href="{{ path('list_course_category', {'id': categorie.id }) }}">
            {# uk-animation-slide-bottom-small #}
            <div class="uk-card uk-card-default uk-card-hover">
                <div class="uk-card-body">
                    <div class="uk-grid-small" uk-grid>
                        <div class="uk-width-auto">
                            <img width="70" height="70"
                                src="https://upload.wikimedia.org/wikipedia/en/thumb/d/d6/BT_logo.svg/1280px-BT_logo.svg.png">
                        </div>
                        <div class="uk-width-expand">
                            <h3 class="uk-card-title">{{ categorie }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </a>
        {% endfor %}
    </div>

    <p uk-margin>
        <a href="{{ path('new_category') }}" class="uk-button uk-button-primary uk-button-small">Ajouter une session</a>
        <a class="uk-button uk-button-secondary uk-button-small">Supprimer une session</a>
    </p>

    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}

    {# ajouter une catégorie #}
    {% if slug == 'add' %}

    {% if formAddCategory|default %}

    <h2>Ajouter une Catégorie</h2>

    <div class="uk-hr"></div>

    {{ form_start(formAddCategory, {'attr': {'class': 'uk-form uk-margin-top uk-grid-small', 'uk-grid' : '' }}) }}

    <div class="uk-width-1-1">
        {{ form_row(formAddCategory.name) }}
    </div>
    <div class="uk-width-1-1">
        {{ form_row(formAddCategory.Valider) }}
    </div>
    
    {{ form_end(formAddCategory) }}
    {% endif %}
    {% endif %}

</div>
{% endblock %}