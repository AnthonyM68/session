{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<div class="uk-container">

    {# session #}
    {% if slug == 'detail' %}

    <h1>Détails de la sessions</h1>

    <table class="uk-table uk-table-responsive uk-table-hover uk-table-divider uk-table-small">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Téléphone</th>
                <th>Date de naissance</th>
                <th>Code postal</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>{{ student.id }}</td>
                <td><a href="{{ path('detail_student', {'id': student.id }) }}">{{ student.firstName }}</a></td>
                <td><a href="{{ path('detail_student', {'id': student.id }) }}">{{ student.lastName }}</a></td>
                <td><a href="{{ path('detail_student', {'id': student.id }) }}">{{ student.address }}</a></td>
                <td><a href="{{ path('detail_student', {'id': student.id }) }}">{{ student.city }}</a></td>
                <td><a href="{{ path('detail_student', {'id': student.id }) }}">{{ student.phoneNumber }}</a></td>
                <td><a href="{{ path('detail_student', {'id': student.id }) }}">{{ student.birthday | date('d-m-Y')}}</a></td>
                <td><a href="{{ path('detail_student', {'id': student.id }) }}">{{ student.zipCode }}</a></td>
            </tr>
        </tbody>
    </table>
    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
</div>
{% endblock %}