{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<div class="uk-container">

    {# detail of th student #}
    {% if student|default %}

    <h1>Détails du stagiaire</h1>

    <div class="ui two column divided grid">
        <div class="stretched row">


            <div class="ui two column divided grid">

                <div class="stretched row">
                    <div class="column">


                        <div class="ui people shape">
                            <div class="sides">
                                <div class="active side">
                                    <div class="ui card">
                                        <div class="image">
                                            <img src="{{ asset('img/education.jpg') }}">
                                        </div>
                                        <div class="content">
                                            <div class="header"></div>
                                            <div class="meta">
                                                <span>{{ student.firstName }} {{ student.lastName }}</span>
                                            </div>
                                            <div class="description">
                                                Note:
                                            </div>
                                        </div>
                                        <div class="extra content">
                                            <span class="right floated">
                                                ID:{{ student.id }}
                                            </span>
                                            <span>
                                                <button class="mini ui button">
                                                    Editer
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="column">
                        <div class="ui list">
                            <div class="item">
                                <div class="header">Nom:</div>
                                {{ student.firstName }}
                            </div>
                            <div class="item">
                                <div class="header">Prénom:</div>
                                {{ student.lastName }}
                            </div>
                            <div class="item">
                                <div class="header">Adresse</div>
                                {{ student.address }}
                            </div>
                            <div class="item">
                                <div class="header">Ville</div>
                                {{ student.city }}
                            </div>
                            <div class="item">
                                <div class="header">Code postal</div>
                                {{ student.zipCode }}
                            </div>
                            <div class="item">
                                <div class="header">Numéro de téléphone</div>
                                {{ student.phoneNumber }}
                            </div>
                            <div class="item">
                                <div class="header">Date de naissance</div>
                                {{ student.birthday | date('d-m-Y') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="ui segment">
                    <div class="ui relaxed divided list">

                        <h3>Sessions où le stagiaire est inscrit</h3>

                        {% for session in student.sessions %}
                        <div class="item">
                            <div class="content">
                                {{ session.formation.name }}
                                Du <a href="{{ path('detail_session', {'id': session.id }) }}">{{ session.dateStart |
                                    date('d-m-Y')}}</a>
                                au <a href="">{{ session.dateEnd | date('d-m-Y') }}</a>
                                <div class="description"></div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="ui segment">


                    <div class="ui mini horizontal divided list">
                        {% for session in student.sessions %}

                        {% for prog in session.programs %}

                        <div class="item">
                            <img class="ui avatar image" src="{{ asset('img/' ~  prog.course.nameCourse ~ '.jpg') }}">
                            <div class="content">
                                <div class="header">{{ prog.course.nameCourse }}</div>
                            </div>
                        </div>
                        {% endfor %}
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </div>

    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}

</div>
{% endblock %}