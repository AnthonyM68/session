{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}


<div class="uk-container">
    {# liste formation #}
    {% if slug == 'list' %}

    <h1>Liste des formations</h1>

    {% if formations|default %}

    <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-small uk-grid-match" uk-grid>
        {% for formation in formations %}
        <a href="{{ path('detail_formation', {'id': formation.id }) }}">

            {# uk-animation-slide-bottom-small #}

            <div id="uk-card-formation" class="uk-card uk-card-default uk-card-hover">
                <div class="uk-card-body">
                    <div class="uk-grid-small " uk-grid>

                        <div class="uk-width-auto">
                            <img width="70" height="70"
                                src="https://upload.wikimedia.org/wikipedia/en/thumb/d/d6/BT_logo.svg/1280px-BT_logo.svg.png">
                        </div>
                        <div class="uk-width-expand">
                            <h3 class="uk-card-title">{{ formation.name }}</h3>

                        </div>
                    </div>
                </div>
            </div>
        </a>
        {% endfor %}
    </div>

    <p class="uk-width-1-1 uk-text-right" uk-margin>
        <a href="{{ path('new_formation')}}" class="uk-button uk-button-primary uk-button-small">Ajouter une
            Formation</a>
        <a class="uk-button uk-button-secondary uk-button-small">Supprimer une Formation</a>
    </p>

    {% else %}
    <h2>Aucune informations en base de donn√©es</h2>
    {% endif %}
    {% endif %}


    {# ajouter une formation #}
    {% if slug == 'add' %}

    {% if formAddFormation|default %}

    <h2>Ajouter une Formation</h2>

    <div class="uk-hr"></div>

    {{ form_start(formAddFormation, {'attr': {'class': 'uk-form uk-margin-top uk-grid-small', 'uk-grid' : '' }}) }}
   
    <div class="uk-width-1-1">
        {{ form_row(formAddFormation.name)}}
    </div>
    <div class="uk-width-1-1">
        {{ form_row(formAddFormation.Valider) }}
    </div>

    {{ form_end(formAddFormation) }}
    {% endif %}
    {% endif %}

</div>
{% endblock %}