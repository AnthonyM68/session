{% extends 'base.html.twig' %}

{% block title %}Programes{% endblock %}

{% block body %}
<div class="uk-container">

    {# session #}
    {% if slug == 'detail' %}

    <h1>Détail du programe</h1>

    {% if program|default %}

    <table class="uk-table uk-table-hover uk-table-divider uk-table-small">
        <thead>
            <tr>
                <th>id</th>
                <th>session_id</th>
                <th>course_id</th>
                <th>Durée en jours:</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Programe: {{ program.id }}</a></td>
                <td>{{ program.session.id }}</a></td>
                <td>{{ program.course.id }}</a></td>
                <td>{{ program.days }}</a></td>
            </tr>
            <tr class="student-item" onclick="window.location='{{ path('detail_session', {'id': program.session.id }) }}';"
            style="cursor:pointer;">
                <td>Session: {{ program.session.id  }}</td>
                <td>Du {{ program.session.dateStart | date('d-m-Y') }} au {{ program.session.dateEnd | date('d-m-Y') }}</td>
                <td>{{ program.course.nameCourse }}</td>
                <td></td>
            </tr>

        </tbody>
    </table>

    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}

</div>
{% endblock %}