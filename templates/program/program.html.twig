{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<div class="uk-container">

    {# session #}
    {% if slug == 'formations' %}

    <h1>Liste des formations où le stagiaire est inscrit</h1>

    {% if formations|default %}

    <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-small uk-grid-match" uk-grid>
        {% for formation in formations %}
        <div>
            <div class="uk-card uk-card-default">
                <div class="uk-card-media-top" style=""></div>
                <div class="uk-card-body">
                     <h3 class="uk-card-title">{{ formation.name }}</h3> 
                    <p>Autre infos session</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}

</div>
{% endblock %}