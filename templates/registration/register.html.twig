{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{% for flash_error in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

<h1>Register</h1>


<div class="uk-container">
    <div class="ui middle aligned center aligned grid">

        <div class="column">
            <h2 class="ui teal image header">
                <img src="https://fomantic-ui.com/examples/assets/images/logo.png" class="image">
                <div class="content">
                    Connectez-vous à votre compte
                </div>
            </h2>

            {{ form_start(registrationForm, {'attr' : {'class' : 'ui large form'}}) }}

            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui right icon input floating-label">
                        <i class="user icon"></i>
                        {{ form_widget(registrationForm.username)}}
                        {{ form_label(registrationForm.username, 'Nom d\'utilisateur') }}
                    </div>

                </div>
                <div class="field">
                    <div class="ui right icon input floating-label">
                        <i class="envelope icon"></i>
                        {{ form_widget(registrationForm.email) }}
                        {{ form_label(registrationForm.email)}}

                    </div>
                </div>
                <div class="field">
                    <div class="ui right icon input floating-label">
                        <i class="lock icon"></i>
                        {{ form_widget(registrationForm.plainPassword.first) }}
                        {{ form_label(registrationForm.plainPassword.first, 'Mot de passe') }}

                    </div>

                    <div class="ui right icon input floating-label">
                        <i class="lock icon"></i>
                        {{ form_widget(registrationForm.plainPassword.second) }}
                        {{ form_label(registrationForm.plainPassword.second, 'Répétez mot de passe') }}
                    </div>

                </div>
                <div class="field">
                    <div class="ui checkbox">
                        {{ form_widget(registrationForm.agreeTerms) }}
                        {{ form_label(registrationForm.agreeTerms, 'Acceptez les termes') }}
                    </div>
                </div>


                <button type="submit" class="btn ui fluid large teal submit button">S'enregistrer</button>
            </div>

            <div class="ui error message">
                {{ form_errors(registrationForm) }}
            </div>

            <div class="ui message">
                Pas encore inscrit? <a href="#">Enregistrez-vous</a>
            </div>
        </div>
    </div>
</div>
{{ form_end(registrationForm) }}
{% endblock %}