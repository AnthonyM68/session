{% extends 'base.html.twig' %}

{% block title %}Formateurs{% endblock %}

{% block body %}

<div class="uk-container">

    {# trainer #}
    {% if slug == 'trainer' %}

    <h1>Liste des formateurs</h1>

    {% if trainers|default %}

    <table class="uk-table uk-table-responsive uk-table-hover uk-table-divider uk-table-small uk-table-justify">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Téléphone</th>
                <th>Date de naissance</th>
                <th>Code postal</th>
            </tr>
        </thead>
        <tbody>
            {% for trainer in trainers %}
            <tr>
                <td>{{ trainer.id }}</td>
                <td>{{ trainer.firstName }}</td>
                <td>{{ trainer.lastName }}</td>
                <td>{{ trainer.address }}</td>
                <td>{{ trainer.city }}</td>
                <td>{{ trainer.phoneNumber }}</td>
                <td>{{ trainer.birthday | date('d-m-Y') }}</td>
                <td>{{ trainer.zipCode }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}
</div>
{% endblock %}