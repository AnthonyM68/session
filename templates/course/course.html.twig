{% extends 'base.html.twig' %}

{% block title %}Modules{% endblock %}

{% block body %}

<div class="uk-container">

    {% if slug == "course" %}

    {# list course #}

    <h1>Liste des cours</h1>

    {% if courses|default %}

    <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-small uk-grid-match" uk-grid>
        {% for course in courses %}

        <div class="uk-card uk-card-default uk-card-hover uk-animation-slide-bottom-small">
            <div class="uk-card-body">
                <div class="uk-grid-small" uk-grid>

                    <div class="uk-width-auto">
                        <img width="70" height="70"
                            src="https://upload.wikimedia.org/wikipedia/en/thumb/d/d6/BT_logo.svg/1280px-BT_logo.svg.png">
                    </div>

                    <div class="uk-width-expand">
                        <h3 class="uk-card-title">{{ course.nameCourse}}</h3>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>


    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}



    {# program #}

    {% if slug == 'program' %}

    <h1>Liste des programmes</h1>

    {% if programs|default %}

    <table class="uk-table uk-table-hover uk-table-divider uk-table-small">
        <thead>
            <tr>
                <th>id</th>
                <th>session_id</th>
                <th>course_id</th>
                <th>Durée en jours:</th>

            </tr>
        </thead>
        <tbody>
            {% for program in programs %}
            <tr>
                <td><a href="{{ path('detail_program', {'id': program.id }) }}">{{ program.id }}</a></td>
                <td><a href="{{ path('detail_program', {'id': program.id }) }}">{{ program.session.id }}</a></td>
                <td><a href="{{ path('detail_program', {'id': program.id }) }}">{{ program.course.id }}</a></td>
                <td><a href="{{ path('detail_program', {'id': program.id }) }}">{{ program.days }}</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <h2>Aucune informations en base de données</h2>
    {% endif %}
    {% endif %}
</div>

{% endblock %}